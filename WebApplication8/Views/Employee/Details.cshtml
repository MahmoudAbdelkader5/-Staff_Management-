@model employeeViewModel
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" method="post" class="p-4 border rounded bg-light">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.Name)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.Name)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.Age)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.Age)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.Email)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.Email)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.Address)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.Address)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.Phone)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.Phone)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.Salary)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.Salary)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.CreationDate)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.CreationDate)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.HireDate)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.HireDate)</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Html.LabelFor(m => m.IsActive)</label>
        <div class="col-sm-10">
            <p class="form-control-plaintext text-danger">@Html.DisplayFor(m => m.IsActive)</p>
        </div>
    </div>
    <div class="col-12 text-center">
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>