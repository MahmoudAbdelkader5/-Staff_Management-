@model Department
@{
    ViewData["Title"] = "Edit Department";
    Layout = "/Views/Shared/_Layout.cshtml"; // Ensure the layout file is used
}


<h3>Edit Department: @Model.name</h3>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="code"></label>
        @Html.TextBoxFor(m => m.code, new { @class = "form-control mb-3" })
        @Html.ValidationMessageFor(m => m.code, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="name"></label>
        @Html.TextBoxFor(m => m.name, new { @class = "form-control mb-3" })
        @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label asp-for="dateCreation"></label>
        @Html.TextBoxFor(m => m.dateCreation, "{0:yyyy-MM-dd}", new { @class = "form-control mb-3", type = "date" })
        @Html.ValidationMessageFor(m => m.dateCreation, "", new { @class = "text-danger" })
    </div>

    <div class="col-12">
        <button class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.id" type="submit">Update</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section validation {
    <partial name="_ValidationScriptsPartial" /> <!-- Ensure the partial view exists -->
}